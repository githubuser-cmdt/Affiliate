    padding: 8px 15px 8px 35px;
}

html[dir="rtl"] .search-box button {
    right: auto;
    left: 10px;
}

html[dir="rtl"] .post-card-meta i {
    margin-right: 0;
    margin-left: 5px;
}

html[dir="rtl"] .read-more i {
    transform: rotate(180deg);
}

html[dir="rtl"] .read-more:hover i {
    transform: rotate(180deg) translateX(5px);
}

html[dir="rtl"] .slider-arrow.prev {
    left: auto;
    right: 20px;
}

html[dir="rtl"] .slider-arrow.next {
    right: auto;
    left: 20px;
}

html[dir="rtl"] .post-nav-item.prev i {
