  <script type='text/javascript'>
    //<![CDATA[
    
    /* ========== GLOBAL VARIABLES ========== */
    var BLOG_URL = '<data:blog.canonicalUrl/>';
    var BLOG_TITLE = '<data:blog.title/>';
    var BLOG_DESCRIPTION = '<data:blog.metaDescription/>';
    var IS_HOMEPAGE = '<b:if cond='data:blog.url == data:blog.homepageUrl'>true<b:else/>false</b:if>';
    var IS_POST = '<b:if cond='data:blog.pageType == "item"'>true<b:else/>false</b:if>';
    var IS_PAGE = '<b:if cond='data:blog.pageType == "static_page"'>true<b:else/>false</b:if>';
    var IS_SEARCH = '<b:if cond='data:blog.searchQuery'>true<b:else/>false</b:if>';
    var IS_ARCHIVE = '<b:if cond='data:blog.archiveUrl'>true<b:else/>false</b:if>';
    
    /* ========== AFFILIATE SETTINGS ========== */
    var AFFILIATE_SETTINGS = {
        enabled: true,
        network: 'earnkoro', // 'earnkoro', 'amazon', 'shareasale', etc.
        earnkoroId: 'YOUR_EARNKORO_ID', // Replace with your EarnKoro ID
        amazonId: 'YOUR_AMAZON_ID', // Replace with your Amazon ID
        shareasaleId: 'YOUR_SHAREASALE_ID', // Replace with your ShareASale ID
        redirectDelay: 500, // milliseconds
        openInNewTab: true,
        trackClicks: true,
        useShortLinks: false,
        enablePopup: true,
        popupMessage: 'Redirecting to {product}...',
        fallbackUrl: 'https://www.earnkoro.com' // Replace with actual EarnKoro URL
    };
    
    /* ========== AFFILIATE FUNCTIONS ========== */
    function processAffiliateLink(url, productName, network) {
        if (!AFFILIATE_SETTINGS.enabled) return url;
        
        network = network || AFFILIATE_SETTINGS.network;
        var affiliateUrl = url;
        
        switch(network.toLowerCase()) {
            case 'earnkoro':
                affiliateUrl = AFFILIATE_SETTINGS.fallbackUrl + '/go/' + AFFILIATE_SETTINGS.earnkoroId + '?url=' + encodeURIComponent(url);
                break;
            case 'amazon':
                affiliateUrl = url + (url.indexOf('?') === -1 ? '?' : '&') + 'tag=' + AFFILIATE_SETTINGS.amazonId;
                break;
            case 'shareasale':
                affiliateUrl = 'https://www.shareasale.com/r.cfm?u=' + AFFILIATE_SETTINGS.shareasaleId + '&b=0&m=0&afftrack=&urllink=' + encodeURIComponent(url);
                break;
        }
        
        if (AFFILIATE_SETTINGS.trackClicks) {
            trackAffiliateClick(productName, url, affiliateUrl);
        }
        
        return affiliateUrl;
    }
    
    function handleAffiliateClick(e, productUrl, productName, network) {
        e.preventDefault();
        
        var url = e.currentTarget.href || productUrl;
        var name = productName || e.currentTarget.getAttribute('data-product-name') || 'product';
        var net = network || e.currentTarget.getAttribute('data-network') || AFFILIATE_SETTINGS.network;
        
        if (AFFILIATE_SETTINGS.enablePopup) {
            var message = AFFILIATE_SETTINGS.popupMessage.replace('{product}', name);
            showNotification(message);
        }
        
        var affiliateUrl = processAffiliateLink(url, name, net);
        
        setTimeout(function() {
            if (AFFILIATE_SETTINGS.openInNewTab) {
                window.open(affiliateUrl, '_blank');
            } else {
                window.location.href = affiliateUrl;
            }
        }, AFFILIATE_SETTINGS.redirectDelay);
        
        return false;
    }
    
    function trackAffiliateClick(productName, originalUrl, affiliateUrl) {
        if (typeof ga !== 'undefined') {
            ga('send', 'event', 'Affiliate', 'Click', productName);
        }
        
        // Store in localStorage for analytics
        var clicks = JSON.parse(localStorage.getItem('affiliate_clicks') || '[]');
        clicks.push({
            product: productName,
            url: originalUrl,
            affiliateUrl: affiliateUrl,
            timestamp: new Date().toISOString()
        });
        localStorage.setItem('affiliate_clicks', JSON.stringify(clicks.slice(-50))); // Keep last 50
    }
    
    function showNotification(message) {
        var notification = document.getElementById('affiliate-notification');
        if (!notification) {
            notification = document.createElement('div');
            notification.id = 'affiliate-notification';
            notification.className = 'affiliate-notification';
            document.body.appendChild(notification);
        }
        
        notification.textContent = message;
        notification.classList.add('show');
        
        setTimeout(function() {
            notification.classList.remove('show');
        }, 3000);
    }
    
    /* ========== DARK MODE ========== */
    function initDarkMode() {
        var darkModeToggle = document.querySelector('.dark-mode-toggle');
        if (!darkModeToggle) return;
        
        var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        var savedTheme = localStorage.getItem('theme');
        
        if (savedTheme === 'dark' || (!savedTheme && prefersDark)) {
            document.body.classList.add('dark-mode');
        }
        
        darkModeToggle.addEventListener('click', function() {
            document.body.classList.toggle('dark-mode');
            localStorage.setItem('theme', document.body.classList.contains('dark-mode') ? 'dark' : 'light');
        });
    }
    
    /* ========== MOBILE MENU ========== */
    function initMobileMenu() {
        var toggle = document.querySelector('.mobile-menu-toggle');
        var menu = document.querySelector('.main-menu');
        
        if (!toggle || !menu) return;
        
        toggle.addEventListener('click', function() {
            menu.classList.toggle('show');
            toggle.classList.toggle('active');
        });
        
        // Close menu when clicking outside
        document.addEventListener('click', function(e) {
            if (!menu.contains(e.target) && !toggle.contains(e.target)) {
                menu.classList.remove('show');
                toggle.classList.remove('active');
            }
        });
    }
    
    /* ========== BACK TO TOP ========== */
    function initBackToTop() {
        var button = document.querySelector('.back-to-top');
        if (!button) return;
        
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) {
                button.classList.add('show');
            } else {
                button.classList.remove('show');
            }
        });
        
        button.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    }
    
    /* ========== STICKY HEADER ========== */
    function initStickyHeader() {
        var header = document.querySelector('.nav-wrapper');
        if (!header) return;
        
        var headerHeight = header.offsetHeight;
        var lastScroll = 0;
        
        window.addEventListener('scroll', function() {
            var scroll = window.pageYOffset;
            
            if (scroll > headerHeight) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
            
            if (scroll > lastScroll && scroll > headerHeight) {
                header.style.transform = 'translateY(-100%)';
            } else {
                header.style.transform = 'translateY(0)';
            }
            
            lastScroll = scroll;
        });
    }
    
    /* ========== SEARCH FUNCTION ========== */
    function initSearch() {
        var searchInput = document.getElementById('search-input');
        var searchButton = document.getElementById('search-button');
        
        if (!searchInput || !searchButton) return;
        
        searchButton.addEventListener('click', function() {
            var query = searchInput.value.trim();
            if (query) {
                window.location.href = '/search?q=' + encodeURIComponent(query);
            }
        });
        
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                var query = searchInput.value.trim();
                if (query) {
                    window.location.href = '/search?q=' + encodeURIComponent(query);
                }
            }
        });
    }
    
    /* ========== SLIDER ========== */
    function initSlider() {
        var sliders = document.querySelectorAll('.hero-slider');
        
        sliders.forEach(function(slider) {
            var slides = slider.querySelectorAll('.slider-slide');
            var dotsContainer = slider.querySelector('.slider-nav');
            var prevArrow = slider.querySelector('.slider-arrow.prev');
            var nextArrow = slider.querySelector('.slider-arrow.next');
            
            if (!slides.length) return;
            
            var currentSlide = 0;
            var slideInterval;
            
            // Create dots
            slides.forEach(function(slide, index) {
                var dot = document.createElement('span');
                dot.className = 'slider-dot';
                dot.addEventListener('click', function() {
                    goToSlide(index);
                });
                dotsContainer.appendChild(dot);
            });
            
            var dots = dotsContainer.querySelectorAll('.slider-dot');
            
            function goToSlide(index) {
                slides.forEach(function(slide) {
                    slide.classList.remove('active');
                });
                dots.forEach(function(dot) {
                    dot.classList.remove('active');
                });
                
                slides[index].classList.add('active');
                dots[index].classList.add('active');
                currentSlide = index;
            }
            
            function nextSlide() {
                var next = (currentSlide + 1) % slides.length;
                goToSlide(next);
            }
            
            function prevSlide() {
                var prev = (currentSlide - 1 + slides.length) % slides.length;
                goToSlide(prev);
            }
            
            if (prevArrow) {
                prevArrow.addEventListener('click', function() {
                    prevSlide();
                    resetInterval();
                });
            }
            
            if (nextArrow) {
                nextArrow.addEventListener('click', function() {
                    nextSlide();
                    resetInterval();
                });
            }
            
            function startInterval() {
                slideInterval = setInterval(nextSlide, 5000);
            }
            
            function resetInterval() {
                clearInterval(slideInterval);
                startInterval();
            }
            
            // Initialize first slide
            goToSlide(0);
            startInterval();
        });
    }
    
    /* ========== COUNTDOWN TIMER ========== */
    function initCountdown() {
        var timers = document.querySelectorAll('.countdown-timer');
        
        timers.forEach(function(timer) {
            var endDate = timer.getAttribute('data-end-date');
            if (!endDate) return;
            
            var endTime = new Date(endDate).getTime();
            
            function updateCountdown() {
                var now = new Date().getTime();
                var distance = endTime - now;
                
                if (distance < 0) {
                    timer.innerHTML = 'Expired';
                    return;
                }
                
                var days = Math.floor(distance / (1000 * 60 * 60 * 24));
                var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                var seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                timer.querySelector('.days .countdown-value').textContent = days;
                timer.querySelector('.hours .countdown-value').textContent = hours;
                timer.querySelector('.minutes .countdown-value').textContent = minutes;
                timer.querySelector('.seconds .countdown-value').textContent = seconds;
            }
            
            updateCountdown();
            setInterval(updateCountdown, 1000);
        });
    }
    
    /* ========== FAQ ACCORDION ========== */
    function initFAQ() {
        var faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(function(item) {
            var question = item.querySelector('.faq-question');
            
            question.addEventListener('click', function() {
                item.classList.toggle('active');
            });
        });
    }
    
    /* ========== NEWSLETTER POPUP ========== */
    function initNewsletterPopup() {
        var popup = document.querySelector('.newsletter-popup');
        var closeBtn = document.querySelector('.popup-close');
        
        if (!popup) return;
        
        // Show popup after 5 seconds
        setTimeout(function() {
            if (!localStorage.getItem('newsletter_shown')) {
                popup.classList.add('show');
                localStorage.setItem('newsletter_shown', 'true');
            }
        }, 5000);
        
        if (closeBtn) {
            closeBtn.addEventListener('click', function() {
                popup.classList.remove('show');
            });
        }
        
        // Close on outside click
        popup.addEventListener('click', function(e) {
            if (e.target === popup) {
                popup.classList.remove('show');
            }
        });
    }
    
    /* ========== COOKIE CONSENT ========== */
    function initCookieConsent() {
        var cookieConsent = document.querySelector('.cookie-consent');
        var acceptBtn = document.querySelector('.cookie-btn.accept');
        var declineBtn = document.querySelector('.cookie-btn.decline');
        
        if (!cookieConsent) return;
        
        if (!localStorage.getItem('cookie_consent')) {
            setTimeout(function() {
                cookieConsent.classList.add('show');
            }, 1000);
        }
        
        if (acceptBtn) {
            acceptBtn.addEventListener('click', function() {
                localStorage.setItem('cookie_consent', 'accepted');
                cookieConsent.classList.remove('show');
            });
        }
        
        if (declineBtn) {
            declineBtn.addEventListener('click', function() {
                localStorage.setItem('cookie_consent', 'declined');
                cookieConsent.classList.remove('show');
            });
        }
    }
    
    /* ========== LAZY LOAD IMAGES ========== */
    function initLazyLoad() {
        var images = document.querySelectorAll('img[data-src]');
        
        var imageObserver = new IntersectionObserver(function(entries, observer) {
            entries.forEach(function(entry) {
                if (entry.isIntersecting) {
                    var img = entry.target;
                    img.src = img.getAttribute('data-src');
                    img.removeAttribute('data-src');
                    imageObserver.unobserve(img);
                }
            });
        });
        
        images.forEach(function(img) {
            imageObserver.observe(img);
        });
    }
    
    /* ========== PROGRESS BAR ========== */
    function initProgressBar() {
        var progressBar = document.querySelector('.loading-bar');
        if (!progressBar) return;
        
        window.addEventListener('scroll', function() {
            var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            var scrolled = (winScroll / height) * 100;
            
            progressBar.style.transform = 'scaleX(' + (scrolled / 100) + ')';
        });
    }
    
    /* ========== INFINITE SCROLL ========== */
    function initInfiniteScroll() {
        var blogPosts = document.getElementById('blog-posts');
        var loadingSpinner = document.querySelector('.infinite-scroll-spinner');
        
        if (!blogPosts || !loadingSpinner) return;
        
        var page = 2;
        var loading = false;
        var endOfPosts = false;
        
        window.addEventListener('scroll', function() {
            if (loading || endOfPosts) return;
            
            var scrollPosition = window.pageYOffset + window.innerHeight;
            var documentHeight = document.documentElement.scrollHeight;
            
            if (scrollPosition > documentHeight - 200) {
                loadMorePosts();
            }
        });
        
        function loadMorePosts() {
            loading = true;
            loadingSpinner.style.display = 'block';
            
            fetch('/search?updated-max=' + new Date().toISOString() + '&max-results=5&by-date=true&ajax=true')
                .then(function(response) {
                    return response.text();
                })
                .then(function(html) {
                    if (html.trim().length === 0) {
                        endOfPosts = true;
                        loadingSpinner.style.display = 'none';
                        return;
                    }
                    
                    var tempDiv = document.createElement('div');
                    tempDiv.innerHTML = html;
                    var posts = tempDiv.querySelectorAll('.post-card');
                    
                    posts.forEach(function(post) {
                        blogPosts.appendChild(post);
                    });
                    
                    page++;
                    loading = false;
                    loadingSpinner.style.display = 'none';
                })
                .catch(function(error) {
                    console.error('Error loading more posts:', error);
                    loading = false;
                    loadingSpinner.style.display = 'none';
                });
        }
    }
    
    /* ========== PRODUCT FILTER ========== */
    function initProductFilter() {
        var filterButtons = document.querySelectorAll('.filter-btn');
        var productItems = document.querySelectorAll('.product-card');
        
        filterButtons.forEach(function(button) {
            button.addEventListener('click', function() {
                var filter = this.getAttribute('data-filter');
                
                filterButtons.forEach(function(btn) {
                    btn.classList.remove('active');
                });
                this.classList.add('active');
                
                productItems.forEach(function(item) {
                    if (filter === 'all' || item.getAttribute('data-category') === filter) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
            });
        });
    }
    
    /* ========== PRICE RANGE FILTER ========== */
    function initPriceRange() {
        var priceRange = document.getElementById('price-range');
        var priceMin = document.getElementById('price-min');
        var priceMax = document.getElementById('price-max');
        var applyFilter = document.getElementById('apply-price-filter');
        
        if (!priceRange || !priceMin || !priceMax || !applyFilter) return;
        
        applyFilter.addEventListener('click', function() {
            var min = parseFloat(priceMin.value) || 0;
            var max = parseFloat(priceMax.value) || Infinity;
            
            var products = document.querySelectorAll('.product-card');
            
            products.forEach(function(product) {
                var priceText = product.querySelector('.current-price').textContent;
                var price = parseFloat(priceText.replace(/[^0-9.-]+/g, ''));
                
                if (price >= min && price <= max) {
                    product.style.display = 'block';
                } else {
                    product.style.display = 'none';
                }
            });
        });
    }
    
    /* ========== SORT PRODUCTS ========== */
    function initProductSort() {
        var sortSelect = document.getElementById('sort-products');
        if (!sortSelect) return;
        
        sortSelect.addEventListener('change', function() {
            var sortBy = this.value;
            var container = document.querySelector('.products-grid');
            var products = Array.from(document.querySelectorAll('.product-card'));
            
            products.sort(function(a, b) {
                var aValue, bValue;
                
                switch(sortBy) {
                    case 'price-low':
                        aValue = parseFloat(a.querySelector('.current-price').textContent.replace(/[^0-9.-]+/g, ''));
                        bValue = parseFloat(b.querySelector('.current-price').textContent.replace(/[^0-9.-]+/g, ''));
                        return aValue - bValue;
                        
                    case 'price-high':
                        aValue = parseFloat(a.querySelector('.current-price').textContent.replace(/[^0-9.-]+/g, ''));
                        bValue = parseFloat(b.querySelector('.current-price').textContent.replace(/[^0-9.-]+/g, ''));
                        return bValue - aValue;
                        
                    case 'name-asc':
                        aValue = a.querySelector('.product-title').textContent;
                        bValue = b.querySelector('.product-title').textContent;
                        return aValue.localeCompare(bValue);
                        
                    case 'name-desc':
                        aValue = a.querySelector('.product-title').textContent;
                        bValue = b.querySelector('.product-title').textContent;
                        return bValue.localeCompare(aValue);
                        
                    case 'rating':
                        aValue = parseInt(a.querySelector('.rating-count').textContent) || 0;
                        bValue = parseInt(b.querySelector('.rating-count').textContent) || 0;
                        return bValue - aValue;
                        
                    default:
                        return 0;
                }
            });
            
            products.forEach(function(product) {
                container.appendChild(product);
            });
        });
    }
    
    /* ========== QUICK VIEW MODAL ========== */
    function initQuickView() {
        var quickViewBtns = document.querySelectorAll('.quick-view-btn');
        var modal = document.querySelector('.quick-view-modal');
        var modalClose = document.querySelector('.modal-close');
        
        quickViewBtns.forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                var productId = this.getAttribute('data-product-id');
                loadQuickView(productId);
            });
        });
        
        if (modalClose) {
            modalClose.addEventListener('click', function() {
                modal.classList.remove('show');
            });
        }
        
        function loadQuickView(productId) {
            // In a real implementation, you would fetch product details via AJAX
            // For demo, we'll show a static modal
            modal.classList.add('show');
        }
    }
    
    /* ========== WISHLIST ========== */
    function initWishlist() {
        var wishlistBtns = document.querySelectorAll('.add-to-wishlist');
        
        wishlistBtns.forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                var productId = this.getAttribute('data-product-id');
                var productName = this.getAttribute('data-product-name');
                
                addToWishlist(productId, productName);
            });
        });
        
        function addToWishlist(productId, productName) {
            var wishlist = JSON.parse(localStorage.getItem('wishlist') || '[]');
            
            if (!wishlist.includes(productId)) {
                wishlist.push(productId);
                localStorage.setItem('wishlist', JSON.stringify(wishlist));
                showNotification(productName + ' added to wishlist!');
            } else {
                showNotification(productName + ' is already in your wishlist!');
            }
        }
    }
    
    /* ========== COMPARE PRODUCTS ========== */
    function initCompare() {
        var compareBtns = document.querySelectorAll('.add-to-compare');
        
        compareBtns.forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                var productId = this.getAttribute('data-product-id');
                var productName = this.getAttribute('data-product-name');
                
                addToCompare(productId, productName);
            });
        });
        
        function addToCompare(productId, productName) {
            var compare = JSON.parse(localStorage.getItem('compare') || '[]');
            
            if (compare.length >= 4) {
                showNotification('You can compare up to 4 products!');
                return;
            }
            
            if (!compare.includes(productId)) {
                compare.push(productId);
                localStorage.setItem('compare', JSON.stringify(compare));
                showNotification(productName + ' added to compare!');
            } else {
                showNotification(productName + ' is already in compare!');
            }
        }
    }
    
    /* ========== RECENTLY VIEWED ========== */
    function trackRecentlyViewed() {
        var productId = document.querySelector('[data-product-id]');
        if (!productId) return;
        
        var product = {
            id: productId.getAttribute('data-product-id'),
            name: document.querySelector('.product-title').textContent,
            price: document.querySelector('.current-price').textContent,
            image: document.querySelector('.product-image img').src,
            url: window.location.href
        };
        
        var recentlyViewed = JSON.parse(localStorage.getItem('recently_viewed') || '[]');
        
        // Remove if already exists
        recentlyViewed = recentlyViewed.filter(function(item) {
            return item.id !== product.id;
        });
        
        // Add to beginning
        recentlyViewed.unshift(product);
        
        // Keep only last 10
        recentlyViewed = recentlyViewed.slice(0, 10);
        
        localStorage.setItem('recently_viewed', JSON.stringify(recentlyViewed));
    }
    
    /* ========== PAGE TRANSITIONS ========== */
    function initPageTransitions() {
        var links = document.querySelectorAll('a:not([target="_blank"]):not([href^="#"]):not([href^="javascript"])');
        
        links.forEach(function(link) {
            link.addEventListener('click', function(e) {
                if (this.hostname === window.location.hostname) {
                    e.preventDefault();
                    var href = this.href;
                    
                    document.body.classList.add('fade-exit');
                    
                    setTimeout(function() {
                        window.location.href = href;
                    }, 300);
                }
            });
        });
    }
    
    /* ========== INITIALIZE ALL ========== */
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize all functions
        initDarkMode();
        initMobileMenu();
        initBackToTop();
        initStickyHeader();
        initSearch();
        initSlider();
        initCountdown();
        initFAQ();
        initNewsletterPopup();
        initCookieConsent();
        initLazyLoad();
        initProgressBar();
        initProductFilter();
        initPriceRange();
        initProductSort();
        initQuickView();
        initWishlist();
        initCompare();
        
        // Track recently viewed if on product page
        if (document.querySelector('[data-product-id]')) {
            trackRecentlyViewed();
        }
        
        // Initialize affiliate buttons
        var affiliateBtns = document.querySelectorAll('.affiliate-btn');
        affiliateBtns.forEach(function(btn) {
            btn.addEventListener('click', function(e) {
                handleAffiliateClick(e);
            });
        });
        
        var affiliateLinks = document.querySelectorAll('.affiliate-link');
        affiliateLinks.forEach(function(link) {
            link.addEventListener('click', function(e) {
                handleAffiliateClick(e);
            });
        });
        
        // Show loading bar on page load
        var loadingBar = document.querySelector('.loading-bar');
        if (loadingBar) {
            loadingBar.style.transform = 'scaleX(0)';
            setTimeout(function() {
                loadingBar.style.transform = 'scaleX(1)';
            }, 100);
            
            window.addEventListener('load', function() {
                loadingBar.style.transform = 'scaleX(1)';
                setTimeout(function() {
                    loadingBar.style.transform = 'scaleX(0)';
                }, 500);
            });
        }
    });
    
    // Window load event
    window.addEventListener('load', function() {
        // Hide loading spinner
        var spinner = document.querySelector('.loading-spinner');
        if (spinner) {
            spinner.style.display = 'none';
        }
        
        // Add loaded class to body
        document.body.classList.add('loaded');
    });
    
    //]]>
  </script>
  
