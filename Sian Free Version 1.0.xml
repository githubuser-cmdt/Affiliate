        var priceRange = document.getElementById(&#39;price-range&#39;);
        var priceMin = document.getElementById(&#39;price-min&#39;);
        var priceMax = document.getElementById(&#39;price-max&#39;);
        var applyFilter = document.getElementById(&#39;apply-price-filter&#39;);
        
        if (!priceRange || !priceMin || !priceMax || !applyFilter) return;
        
        applyFilter.addEventListener(&#39;click&#39;, function() {
            var min = parseFloat(priceMin.value) || 0;
            var max = parseFloat(priceMax.value) || Infinity;
            
            var products = document.querySelectorAll(&#39;.product-card&#39;);
            
            products.forEach(function(product) {
                var priceText = product.querySelector(&#39;.current-price&#39;).textContent;
                var price = parseFloat(priceText.replace(/[^0-9.-]+/g, &#39;&#39;));
                
                if (price &gt;= min && price &lt;= max) {
                    product.style.display = &#39;block&#39;;
                } else {
                    product.style.display = &#39;none&#39;;
                }
            });
        });
    }
    
    /* ========== SORT PRODUCTS ========== */
    function initProductSort() {
        var sortSelect = document.getElementById(&#39;sort-products&#39;);
        if (!sortSelect) return;
        
        sortSelect.addEventListener(&#39;change&#39;, function() {
            var sortBy = this.value;
            var container = document.querySelector(&#39;.products-grid&#39;);
            var products = Array.from(document.querySelectorAll(&#39;.product-card&#39;));
            
            products.sort(function(a, b) {
                var aValue, bValue;
                
                switch(sortBy) {
                    case &#39;price-low&#39;:
                        aValue = parseFloat(a.querySelector(&#39;.current-price&#39;).textContent.replace(/[^0-9.-]+/g, &#39;&#39;));
                        bValue = parseFloat(b.querySelector(&#39;.current-price&#39;).textContent.replace(/[^0-9.-]+/g, &#39;&#39;));
                        return aValue - bValue;
                        
                    case &#39;price-high&#39;:
                        aValue = parseFloat(a.querySelector(&#39;.current-price&#39;).textContent.replace(/[^0-9.-]+/g, &#39;&#39;));
                        bValue = parseFloat(b.querySelector(&#39;.current-price&#39;).textContent.replace(/[^0-9.-]+/g, &#39;&#39;));
                        return bValue - aValue;
                        
                    case &#39;name-asc&#39;:
                        aValue = a.querySelector(&#39;.product-title&#39;).textContent;
                        bValue = b.querySelector(&#39;.product-title&#39;).textContent;
                        return aValue.localeCompare(bValue);
                        
                    case &#39;name-desc&#39;:
                        aValue = a.querySelector(&#39;.product-title&#39;).textContent;
                        bValue = b.querySelector(&#39;.product-title&#39;).textContent;
                        return bValue.localeCompare(aValue);
                        
                    case &#39;rating&#39;:
                        aValue = parseInt(a.querySelector(&#39;.rating-count&#39;).textContent) || 0;
                        bValue = parseInt(b.querySelector(&#39;.rating-count&#39;).textContent) || 0;
                        return bValue - aValue;
                        
                    default:
                        return 0;
                }
            });
            
            products.forEach(function(product) {
                container.appendChild(product);
            });
        });
    }
    
    /* ========== QUICK VIEW MODAL ========== */
    function initQuickView() {
        var quickViewBtns = document.querySelectorAll(&#39;.quick-view-btn&#39;);
        var modal = document.querySelector(&#39;.quick-view-modal&#39;);
        var modalClose = document.querySelector(&#39;.modal-close&#39;);
        
        quickViewBtns.forEach(function(btn) {
            btn.addEventListener(&#39;click&#39;, function(e) {
                e.preventDefault();
                var productId = this.getAttribute(&#39;data-product-id&#39;);
                loadQuickView(productId);
            });
        });
        
        if (modalClose) {
            modalClose.addEventListener(&#39;click&#39;, function() {
                modal.classList.remove(&#39;show&#39;);
            });
        }
        
        function loadQuickView(productId) {
            // In a real implementation, you would fetch product details via AJAX
            // For demo, we&#39;ll show a static modal
            modal.classList.add(&#39;show&#39;);
        }
    }
    
    /* ========== WISHLIST ========== */
    function initWishlist() {
        var wishlistBtns = document.querySelectorAll(&#39;.add-to-wishlist&#39;);
        
        wishlistBtns.forEach(function(btn) {
            btn.addEventListener(&#39;click&#39;, function(e) {
                e.preventDefault();
                var productId = this.getAttribute(&#39;data-product-id&#39;);
                var productName = this.getAttribute(&#39;data-product-name&#39;);
                
                addToWishlist(productId, productName);
            });
        });
        
        function addToWishlist(productId, productName) {
            var wishlist = JSON.parse(localStorage.getItem(&#39;wishlist&#39;) || &#39;[]&#39;);
            
            if (!wishlist.includes(productId)) {
                wishlist.push(productId);
                localStorage.setItem(&#39;wishlist&#39;, JSON.stringify(wishlist));
                showNotification(productName + &#39; added to wishlist!&#39;);
            } else {
                showNotification(productName + &#39; is already in your wishlist!&#39;);
            }
        }
    }
    
    /* ========== COMPARE PRODUCTS ========== */
    function initCompare() {
        var compareBtns = document.querySelectorAll(&#39;.add-to-compare&#39;);
        
        compareBtns.forEach(function(btn) {
            btn.addEventListener(&#39;click&#39;, function(e) {
                e.preventDefault();
                var productId = this.getAttribute(&#39;data-product-id&#39;);
                var productName = this.getAttribute(&#39;data-product-name&#39;);
                
                addToCompare(productId, productName);
            });
        });
        
        function addToCompare(productId, productName) {
            var compare = JSON.parse(localStorage.getItem(&#39;compare&#39;) || &#39;[]&#39;);
            
            if (compare.length &gt;= 4) {
                showNotification(&#39;You can compare up to 4 products!&#39;);
                return;
            }
            
            if (!compare.includes(productId)) {
                compare.push(productId);
                localStorage.setItem(&#39;compare&#39;, JSON.stringify(compare));
                showNotification(productName + &#39; added to compare!&#39;);
            } else {
                showNotification(productName + &#39; is already in compare!&#39;);
            }
        }
    }
    
    /* ========== RECENTLY VIEWED ========== */
    function trackRecentlyViewed() {
        var productId = document.querySelector(&#39;[data-product-id]&#39;);
        if (!productId) return;
        
        var product = {
            id: productId.getAttribute(&#39;data-product-id&#39;),
            name: document.querySelector(&#39;.product-title&#39;).textContent,
            price: document.querySelector(&#39;.current-price&#39;).textContent,
            image: document.querySelector(&#39;.product-image img&#39;).src,
            url: window.location.href
        };
        
        var recentlyViewed = JSON.parse(localStorage.getItem(&#39;recently_viewed&#39;) || &#39;[]&#39;);
        
        // Remove if already exists
        recentlyViewed = recentlyViewed.filter(function(item) {
            return item.id !== product.id;
        });
        
        // Add to beginning
        recentlyViewed.unshift(product);
        
        // Keep only last 10
        recentlyViewed = recentlyViewed.slice(0, 10);
        
        localStorage.setItem(&#39;recently_viewed&#39;, JSON.stringify(recentlyViewed));
    }
    
    /* ========== PAGE TRANSITIONS ========== */
    function initPageTransitions() {
        var links = document.querySelectorAll(&#39;a:not([target=&quot;_blank&quot;]):not([href^=&quot;#&quot;]):not([href^=&quot;javascript&quot;])&#39;);
        
        links.forEach(function(link) {
            link.addEventListener(&#39;click&#39;, function(e) {
                if (this.hostname === window.location.hostname) {
                    e.preventDefault();
                    var href = this.href;
                    
                    document.body.classList.add(&#39;fade-exit&#39;);
                    
                    setTimeout(function() {
                        window.location.href = href;
                    }, 300);
                }
            });
        });
    }
    
    /* ========== INITIALIZE ALL ========== */
    document.addEventListener(&#39;DOMContentLoaded&#39;, function() {
        // Initialize all functions
        initDarkMode();
        initMobileMenu();
        initBackToTop();
        initStickyHeader();
        initSearch();
        initSlider();
        initCountdown();
        initFAQ();
        initNewsletterPopup();
        initCookieConsent();
        initLazyLoad();
        initProgressBar();
        initProductFilter();
        initPriceRange();
        initProductSort();
        initQuickView();
        initWishlist();
        initCompare();
        
        // Track recently viewed if on product page
        if (document.querySelector(&#39;[data-product-id]&#39;)) {
            trackRecentlyViewed();
        }
        
        // Initialize affiliate buttons
        var affiliateBtns = document.querySelectorAll(&#39;.affiliate-btn&#39;);
        affiliateBtns.forEach(function(btn) {
            btn.addEventListener(&#39;click&#39;, function(e) {
                handleAffiliateClick(e);
            });
        });
        
        var affiliateLinks = document.querySelectorAll(&#39;.affiliate-link&#39;);
        affiliateLinks.forEach(function(link) {
            link.addEventListener(&#39;click&#39;, function(e) {
                handleAffiliateClick(e);
            });
        });
        
        // Show loading bar on page load
        var loadingBar = document.querySelector(&#39;.loading-bar&#39;);
        if (loadingBar) {
            loadingBar.style.transform = &#39;scaleX(0)&#39;;
            setTimeout(function() {
                loadingBar.style.transform = &#39;scaleX(1)&#39;;
            }, 100);
            
            window.addEventListener(&#39;load&#39;, function() {
                loadingBar.style.transform = &#39;scaleX(1)&#39;;
                setTimeout(function() {
                    loadingBar.style.transform = &#39;scaleX(0)&#39;;
                }, 500);
            });
        }
    });
    
    // Window load event
    window.addEventListener(&#39;load&#39;, function() {
        // Hide loading spinner
        var spinner = document.querySelector(&#39;.loading-spinner&#39;);
        if (spinner) {
            spinner.style.display = &#39;none&#39;;
        }
        
        // Add loaded class to body
        document.body.classList.add(&#39;loaded&#39;);
    });
    
